<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CadastroEvento1"
    android:background="@drawable/intro">
    <RelativeLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cabecalho"
            android:orientation="horizontal">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#FFFFFFFF"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    app:srcCompat="@drawable/logo"/>
            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="280dp"
                android:layout_height="205dp"
                android:background="#FFFFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="250dp">
                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="175dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratsemibold"
                        android:text="Gostaria de adicionar uma atividade ao mural?"
                        android:textAlignment="center"
                        android:textColor="#3A4748"
                        android:textSize="20dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="30dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginRight="80dp"
                                app:srcCompat="@drawable/timescirclesolid"/>
                            <ImageView
                                android:id="@+id/Tela_2_cadastro_evento"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:srcCompat="@drawable/checkcirclesolid"/>
                        </LinearLayout>
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:id="@+id/rodape"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/atgrosso"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/pesfino"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/tifino"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/gpfino"
                android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>